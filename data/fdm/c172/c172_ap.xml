<?xml version="1.0" encoding="UTF-8"?>
<autopilot>
  
  <min_pitch unit="deg"> -20.0  </min_pitch>
  <max_pitch unit="deg">  20.0  </max_pitch>
  
  <min_alt unit="ft">    100.0  </min_alt>
  <max_alt unit="ft">  50000.0  </max_alt>
  
  <min_ias unit="kts">    0.0  </min_ias>
  <max_ias unit="kts">  160.0  </max_ias>
  
  <min_vs unit="fpm"> -5000.0  </min_vs>
  <max_vs unit="fpm">  5000.0  </max_vs>
  
  <rate_pitch unit="deg" >   1.0  </rate_pitch>
  <rate_alt   unit="ft"  >   8.3  </rate_alt>
  <rate_ias   unit="kts" >   0.75 </rate_ias>
  <rate_vs    unit="fpm" > 100.0  </rate_vs>
  
  <soft_ride_coef> 0.5 </soft_ride_coef>
  
  <!-- roll channel -->
  <ctrl_roll>
    <max_rate> 2.0 </max_rate>
    
    <pid>
      <kp> 30.0 </kp>
      <ki> 30.0 </ki>
      <kd>  7.5 </kd>
      
      <min> -1.0 </min>
      <max>  1.0 </max>
    </pid>
  </ctrl_roll>
  
  <!-- pitch channel -->
  <ctrl_pitch>
    <max_rate> 2.0 </max_rate>
    
    <pid>
      <kp>  5.0 </kp>
      <ki> 10.0 </ki>
      <kd>  1.7 </kd>
      
      <min> -1.0 </min>
      <max>  1.0 </max>
    </pid>
    
    <gain_ias keys_unit="kts">
       60.0   2.0
      100.0   1.0
      130.0   1.0
      160.0   0.5
    </gain_ias>
  </ctrl_pitch>
  
  <!-- yaw channel -->
  <ctrl_yaw>
    <max_rate> 1.0 </max_rate>
    
    <pid>
      <kp> 2.0 </kp>
    </pid>
  </ctrl_yaw>
  
  <!-- flight director -->
  <flight_director>
    
    <max_roll  unit="deg">  30.0  </max_roll>
    <min_pitch unit="deg"> -20.0  </min_pitch>
    <max_pitch unit="deg">  20.0  </max_pitch>
    
    <max_rate_roll  unit="deg"> 10.0 </max_rate_roll>
    <max_rate_pitch unit="deg"> 10.0 </max_rate_pitch>
    
    <climb_rate_tc> 2.0 </climb_rate_tc>
    
    <climb_rate_arm unit="fpm"> 500.0 </climb_rate_arm>
    
    <min_dh_arm unit="ft"> 50.0 </min_dh_arm>
    
    <mode_alt>
      <pid>
        <kp> 2.0e-3 </kp>
        <ki> 2.0e-3 </ki>
        <kd> 5.0e-4 </kd>
        
        <min unit="deg"> -15.0 </min>
        <max unit="deg">  15.0 </max>
      </pid>
    </mode_alt>
    
    <mode_ias>
      <pid>
        <kp> -1.0e-2 </kp>
        <ki> -5.0e-3 </ki>
        <kd> -1.0e-2 </kd>
      </pid>
    </mode_ias>
    
    <mode_vs>
      <pid>
        <kp> 8.5e-3 </kp>
        <ki> 3.0e-2 </ki>
        <kd> 1.5e-3 </kd>
      </pid>
    </mode_vs>
    
    <mode_arm>
      <pid>
        <kp> 1.0e-1 </kp>
        <ki> 0.1e-1 </ki>
        <kd> 0.5e-1 </kd>
        
        <min unit="fpm"> -500.0 </min>
        <max unit="fpm">  500.0 </max>
      </pid>
    </mode_arm>
    
    <mode_hdg>
      <pid>
        <kp> 8.0e-1 </kp>
        <ki> 1.0e-2 </ki>
        <kd> 1.0e-1 </kd>
      </pid>
    </mode_hdg>
    
  </flight_director>
  
</autopilot>
